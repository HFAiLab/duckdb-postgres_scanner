statement ok
INSERT INTO lists VALUES ([]);

statement ok
INSERT INTO lists VALUES (NULL);

statement ok
INSERT INTO lists VALUES ([NULL]);

query I
SELECT * FROM lists
----
[1, 2, 3]
[]
NULL
[NULL]

endloop

